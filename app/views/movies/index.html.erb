<div class="flex justify-evenly items-center w-3/4 h-3/4 border-2">
  <div class="flex flex-col gap-2 border-2 p-4">
    <h1 class="text-2xl border-2 p-2">Movies</h1>
    <%= render(@movies) || "There are no movies available." %>
  </div>
  <div class="flex flex-col gap-2">

    <%= link_to new_movie_path(@movie) do %>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      add a movie
    </button>
    <% end %>

    <%= form_with url: "/movies", method: :delete do |form| %>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      <%= form.submit "delete all" %>
      <% end %>
    </button>
  </div>
</div>
