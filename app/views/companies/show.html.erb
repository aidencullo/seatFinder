<%= render(ContentComponent.new(title: "admin")) do %>
    <%= render(PanelsComponent.new()) do %>
        <%= render(PanelComponent.new(title: "events")) do %>
            <% @company.events.each do |event| %>
                <%= link_to event.id, event %>
            <% end %>
            
            <%= form_with model: [ @company, @company.events.build ],
             class: "border-2 p-8 flex flex-col" do |form| %>
                Venue: <%= form.collection_select :venue_id, Venue.order(:id), :id, :id %>
                <%= form.label :rows, "rows" %>
                <%= form.number_field :rows %>
                <%= form.label :cols, "cols" %>
                <%= form.number_field :cols %>
                <%= form.submit class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
            <% end %>
            
        <% end %>
    <% end %>
<% end %>
